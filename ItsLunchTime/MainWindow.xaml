<Window x:Class="ItsLunchTime.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid VerticalAlignment="Top">
        <DockPanel>
            <Button Content="Run Simulation" VerticalAlignment="Top" DockPanel.Dock="Top" Click="Button_Click"/>
            <TextBox AcceptsReturn="True" TextWrapping="Wrap" Text="{Binding Log}" VerticalScrollBarVisibility="Auto"/>
        </DockPanel>
    </Grid>
</Window>
